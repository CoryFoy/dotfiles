# cd
alias ..='cd ..'

# ls
alias ls="ls -F"
alias l="ls -lAh"
alias ll="ls -l"
alias la='ls -A'

# git
alias gl='git pull'
alias gp='git push'
alias gd='git diff'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias 'git co'='git checkout'

# rails
alias sc='script/console'
alias ss='script/server'
alias sg='script/generate'
alias a='autotest'
alias tlog='tail -f log/development.log'
alias migrate='rake db:migrate db:test:clone'
alias mreset='rake db:migrate:reset db:test:clone'

#odbc
alias odbc='vi /usr/local/etc/odbc.ini'

#cucumber
alias cucnew='cucumber --tags @new'
alias feature='script/generate feature'

# commands starting with % for pasting from web
alias %=' '

#rvm
alias ruby18='rvm use ruby-1.8.7'
alias ruby19='rvm use ruby-1.9.2'

alias golcc='rvm use ruby-1.9.2@lcc && cd ~/code/lcc'
alias goeas='rvm use 1.9.2@eas && cd ~/projects/eas.champvrs.com'
alias golap='rvm use ruby-1.9.2-p180@lap && cd ~/code/liftaprayer'
alias gocms='rvm use ruby-1.9.2-p180@cms && cd ~/code/cms'
alias goem='rvm use ruby-1.9.2-p180@em && cd ~/code/'
alias jruby='rvm use jruby'

#firefox development

alias ffdev='/Applications/Firefox.app/Contents/MacOS/firefox-bin -no-remote -P Dev &'
alias ffdefault='/Applications/Firefox.app/Contents/MacOS/firefox-bin -no-remote -P default &'
