# cd
alias ..='cd ..'

# ls
alias ls="ls -F"
alias l="ls -lAh"
alias ll="ls -l"
alias la='ls -A'

# git
alias git=hub
alias gl='hub pull'
alias gp='hub push'
alias gd='hub diff'
alias gc='hub commit'
alias gca='hub commit -a'
alias gco='hub checkout'
alias gb='hub branch'
alias gs='hub status'
alias grm="hub status | grep deleted | awk '{print \$3}' | xargs git rm"

#Rails goodies
function _rails_command () {
  if [ -e "script/server" ]; then
ruby script/$@
  else
ruby script/rails $@
  fi
}

alias sc='_rails_command console'
alias rd='_rails_command destroy'
alias rdb='_rails_command dbconsole'
alias rdbm='rake db:migrate db:test:clone'
alias rg='_rails_command generate'
alias rp='_rails_command plugin'
alias ss='_rails_command server'
alias rsd='_rails_command server --debugger'
alias devlog='tail -f log/development.log'

#odbc
alias odbc='vi /usr/local/etc/odbc.ini'

#cucumber
alias feature='_rails_command generate feature'

# commands starting with % for pasting from web
alias %=' '

#firefox development

alias ffdev='/Applications/Firefox.app/Contents/MacOS/firefox-bin -no-remote -P Dev &'
alias ffdefault='/Applications/Firefox.app/Contents/MacOS/firefox-bin -no-remote -P default &'
